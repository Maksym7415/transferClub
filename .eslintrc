{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb/base",
        "react-app"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "no-class-assign": "off",
        "no-shadow": "off",
        "max-len": [
            "error",
            200
        ],
        "no-func-assign": "off",
        "consistent-return": "off",
        "react-hooks/exhaustive-deps": "off",
        "no-nested-ternary": "off",
        "react/react-in-jsx-scope": "off"
    }
}